<h2 class="page-header">RProfile</h2>
<form method="post" action="/users/update">
  <div class="form-group">
    <label>Username</label>
    <input type="text" value={{user}} id="username" class="form-control" name="username">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input type="email" value={{email}} id="email" class="form-control"  name="email">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
  </div>
  <button type="submit" id="save" name="save" class="btn btn-default">Save</button>
</form>
